/* miniprogram/pages/detail/detail.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 120rpx;
}

/* 返回按钮 */
.back-button {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f3f4f6;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  color: #374151;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 详情卡片 */
.detail-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
}

/* 元数据 */
.metadata {
  margin-bottom: 40rpx;
  color: #6b7280;
  font-size: 28rpx;
}

/* 图片容器 */
.image-container {
  margin-bottom: 40rpx;
  text-align: center;
}

.detail-image {
  width: 100%;
  height: 500rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

/* 分析内容 */
.analysis-content {
  margin-bottom: 40rpx;
  line-height: 1.6;
  color: #374151;
  font-size: 30rpx;
}

/* 生成报告按钮 */
.generate-report {
  width: 60%;
  margin: 24rpx auto 0 auto;
  padding: 18rpx 0;
  font-size: 26rpx;
  border-radius: 10rpx;
  background: #2563eb;
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(37,99,235,0.10);
}

.generate-report:active {
  background-color: #1d4ed8;
}