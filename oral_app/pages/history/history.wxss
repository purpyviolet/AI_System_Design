.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 20rpx 0;
  box-sizing: border-box;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 历史记录列表 */
.history-list {
  padding: 0 20rpx;
}

.history-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title-line {
  display: flex;
  flex-direction: column;
}

.check-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.timestamp {
  font-size: 26rpx;
  color: #999;
}

.delete-btn {
  background-color: #ffebee !important;
  color: #f44336 !important;
  font-size: 24rpx;
  padding: 8rpx 20rpx !important;
  border-radius: 30rpx;
  line-height: 1.5;
  margin: 0; /* 重置默认外边距 */
  border: none;
}

.delete-btn::after {
  border: none;
}

.card-body {
  /* card-body is a container */
}

.record-image {
  display: block;
  margin: 0 auto 25rpx auto;
  width: 60%;
  height: 280rpx;
  border-radius: 16rpx;
}

.sections-container {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.section-item {
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}

.section-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #2563eb;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.section-body {
  font-size: 28rpx;
  color: #555;
  white-space: pre-wrap; /* 保留换行和空格 */
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-top: 15rpx;
  line-height: 1.7;
}

.description-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
  white-space: pre-wrap;
}