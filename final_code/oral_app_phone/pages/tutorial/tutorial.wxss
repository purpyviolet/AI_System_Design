.tutorial-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 10rpx 40rpx;
  background-color: #ffffff;
}

/* 进度指示器样式 */
.progress-bar {
  padding: 5rpx 0;
}

.progress-dots {
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #e5e7eb;
  transition: all 0.3s ease;
}

.dot.active {
  background-color: #2563eb;
  transform: scale(1.2);
}

/* 教程内容样式 */
.tutorial-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx 0;
}

.image-container {
  width: 500rpx;
  height: 500rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tutorial-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: opacity 0.3s ease;
}

.tutorial-text {
  text-align: center;
  padding: 0 40rpx;
}

.tutorial-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 20rpx;
}

.tutorial-description {
  font-size: 32rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 按钮样式 */
.tutorial-buttons {
  margin-top: auto;
  padding: 40rpx 0;
}

.skip-btn {
  background: none;
  color: #6b7280;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  padding: 0;
}

.nav-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.nav-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #f3f4f6;
  color: #4b5563;
}

.nav-btn.primary {
  background-color: #2563eb;
  color: #ffffff;
}

/* 按钮点击效果 */
.nav-btn:active {
  opacity: 0.8;
} 